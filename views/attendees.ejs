<!DOCTYPE html>
<html>
<head>
  <title>Attendance Records</title>
</head>
<body>
  <h2>Attendance Records</h2>
  <table border="1" cellpadding="8" cellspacing="0">
    <thead>
      <tr>
        <th>#</th>
        <th>Name</th>
        <th>Unique ID</th>
        <th>Timestamp</th>
      </tr>
    </thead>
    <tbody>
      <% records.forEach((record, index) => { %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= record.userId ? record.userId.name : 'Unknown' %></td>
          <td><%= record.userId ? record.userId.uniqueId : 'Unknown' %></td>
          <td><%= new Date(record.timestamp).toLocaleString() %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>
